{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@lib/*": ["src/lib/*"]
        },
        "exactOptionalPropertyTypes": false,
        "moduleResolution": "nodenext",
        "module": "nodenext"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./.astro/types.d.ts",
        "./src",
        "./astro.config.ts"
    ],
}